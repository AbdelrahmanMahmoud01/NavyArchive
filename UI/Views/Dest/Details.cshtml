@model GetFileDestDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>تفاصيل</h1>

<div>
    <h4>الفرع</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            الأسم
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <table class="table table-hover">
    <tbody>
@foreach (var item in Model.Officers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="officer" asp-route-id="@item.Id" class="btn btn-light">تعديل</a> 
                <a asp-action="Details" asp-controller="officer" asp-route-id="@item.Id" class="btn btn-light">بيانات</a> 
                <a asp-action="Delete" asp-controller="officer" asp-route-id="@item.Id" class="btn btn-outline-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">تعديل</a>
    <a asp-action="Index" class="btn btn-outline-info">العودة إلي القائمة</a>
</div>
