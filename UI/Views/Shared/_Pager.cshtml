@model Application.Features.Pagintaion.Pager


<div class="container">
    @if (Model.TotalPages > 0)
    {

        <ul class="pagination justify-content-end">
            @if (Model.TotalPages > 0)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="search" asp-route-pg="1" asp-route-term="@ViewBag.Term">
                        أول صفحة
                    </a>
                </li>
            }
            @for (var pge = Model.StartPage; pge < Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage? "active":"")">
                    <a class="page-link"
                    asp-action="search" asp-route-pg="@pge" asp-route-term="@ViewBag.Term">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="search" asp-route-term="@ViewBag.Term" asp-route-pg="@(Model.TotalPages -1)">
                        أخر صحفة
                    </a>
                </li>
            }
        </ul>
    }
</div>